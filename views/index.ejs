<body>
    
  
  <form action="/index"  method="post">

      <div class="container">
          <div class="row ">
              <div class="border  shadow mx-auto col-12 col-md-6 mt-4">
                  <h5 class="text-center">Sign in</h5>
                  <% if (message !=="") { %>
                    <div class="text-center alert alert-danger"> <%=message %></div>
                    
                    <% } %>
                    <input type="text" class="form-control shadow mt-4 border" name="email" placeholder="enter email">
                    <input type="text" class="form-control shadow mt-4 border" name="password" placeholder="enter Password">
            <button class="btn btn-primary w-100 mt-3 mb-3 mx-auto" type="submit">Sign In</button>
          </div>
          <span class="text-center mb-3">  Already have an account  <a href="signup">Signup</a></span>
    </div>
</div>
</form>
